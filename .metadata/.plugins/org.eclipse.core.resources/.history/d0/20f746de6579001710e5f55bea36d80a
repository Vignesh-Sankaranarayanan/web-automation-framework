	public Flow00HomePage(
			 Page01HomePage page01, WebDriver driver) {
		this.page01 = page01;
		this.driver=driver;
		

		
	}

	public void TestLeftNavigationPage(WebDriver driverNew) {
		
		logger.info("started testing the left navigation page");
		driverNew.navigate().to("https://uptake.com/");
		page01.aboutNavLink();
	    softAssert.assertEquals(
	    		page01.aboutNavLink().getAttribute("value"),
	    		  "Test",
	       "ASSERTION ERROR: Test Uptake Home page" + page01.aboutNavLink().getAttribute("value") + "Expected Value in UI Home  Value:-" );
	     
	  
		
		logger.info("completed testing the left navigation page");
	}
